<BorderPane style="-fx-background-color: #EDE3CE;" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController">
   <center>
      <GridPane prefHeight="416.0" prefWidth="700.0">
         <columnConstraints>
